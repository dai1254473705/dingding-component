<view class="dm-badge {{className}}">
  <slot />
  <view
    class="dm-badge-dot {{dotClass}}"
    a:if="{{show && !text && !loading}}" />
  <view
    a:elif="{{show && text != 0  && !loading}}"
    class="dm-badge-text {{textClass}} {{textTypeClass}}">
    <view class="dm-badge-text-box">
      {{text > 99 ? '99' : text}}
      <text
        class="dm-badge-add-mark"
        a:if="{{text > 99}}">+</text>
    </view>
  </view>
</view>