.dm-tooltips {
  position: relative;
  z-index: 1060;
  display: block;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-size: 28rpx;
  list-style: none;
  visibility: visible;
}
.dm-tooltips-visible__animated {
  transition: opacity 0.6s 0.05s, margin 0.6s 0.05s ease;
}
.dm-tooltips-visible-in {
  opacity: 1;
}
.dm-tooltips-visible-out__left {
  margin-right: -8rpx;
  opacity: 0;
}
.dm-tooltips-visible-out__right {
  margin-left: -8rpx;
  opacity: 0;
}
.dm-tooltips-visible-out__topLeft,
.dm-tooltips-visible-out__topRight,
.dm-tooltips-visible-out__top {
  margin-bottom: -8rpx;
  opacity: 0;
}
.dm-tooltips-visible-out__bottomLeft,
.dm-tooltips-visible-out__bottomRight,
.dm-tooltips-visible-out__bottom {
  margin-top: -8rpx;
  opacity: 0;
}
.dm-tooltips-host {
  display: inline-block;
  width: auto;
}
.dm-tooltips-title {
  position: absolute;
  padding: 14rpx 64rpx 14rpx 24rpx;
  text-align: left;
  text-decoration: none;
  background-color: #3296fa;
  border-radius: 6rpx;
  box-shadow: 0 4rpx 8rpx 0 rgba(25, 31, 37, 0.16);
}
.dm-tooltips-title .arrow_up {
  border-bottom-color: #3296fa;
}
.dm-tooltips-title .arrow_left {
  border-right-color: #3296fa;
}
.dm-tooltips-title .arrow_down {
  border-top-color: #3296fa;
}
.dm-tooltips-title .arrow_right {
  border-left-color: #3296fa;
}
.dm-tooltips-title-arrow {
  position: absolute;
  display: block;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
}
.dm-tooltips-title-placement__left {
  right: 100%;
  top: 50%;
  transform: translate(-20rpx, -50%);
}
.dm-tooltips-title-placement__left > .dm-tooltips-title-arrow {
  left: 100%;
  top: 50%;
  transform: translate(0, -50%);
  border-left-color: #3296fa;
}
.dm-tooltips-title-placement__right {
  left: 100%;
  top: 50%;
  transform: translate(20rpx, -50%);
}
.dm-tooltips-title-placement__right > .dm-tooltips-title-arrow {
  right: 100%;
  top: 50%;
  transform: translate(0, -50%);
  border-right-color: #3296fa;
}
.dm-tooltips-title-placement__top {
  bottom: 100%;
  left: 50%;
  transform: translate(-50%, -20rpx);
}
.dm-tooltips-title-placement__top > .dm-tooltips-title-arrow {
  top: 100%;
  left: 50%;
  transform: translate(-50%, 0);
  border-top-color: #3296fa;
}
.dm-tooltips-title-placement__bottom {
  top: 100%;
  left: 50%;
  transform: translate(-50%, 20rpx);
}
.dm-tooltips-title-placement__bottom > .dm-tooltips-title-arrow {
  bottom: 100%;
  left: 50%;
  transform: translate(-50%, 0);
  border-bottom-color: #3296fa;
}
.dm-tooltips-title-placement__topLeft {
  right: 0;
  bottom: 100%;
  transform: translate(0, -20rpx);
}
.dm-tooltips-title-placement__topLeft > .dm-tooltips-title-arrow {
  top: 100%;
  right: 0;
  transform: translate(-24rpx, 0);
  border-top-color: #3296fa;
}
.dm-tooltips-title-placement__topRight {
  bottom: 100%;
  left: 0;
  transform: translate(0, -20rpx);
}
.dm-tooltips-title-placement__topRight > .dm-tooltips-title-arrow {
  top: 100%;
  left: 0;
  transform: translate(24rpx, 0);
  border-top-color: #3296fa;
}
.dm-tooltips-title-placement__bottomLeft {
  top: 100%;
  right: 0;
  transform: translate(0, 20rpx);
}
.dm-tooltips-title-placement__bottomLeft > .dm-tooltips-title-arrow {
  right: 0;
  bottom: 100%;
  transform: translate(-24rpx, 0);
  border-bottom-color: #3296fa;
}
.dm-tooltips-title-placement__bottomRight {
  top: 100%;
  left: 0;
  transform: translate(0, 20rpx);
}
.dm-tooltips-title-placement__bottomRight > .dm-tooltips-title-arrow {
  bottom: 100%;
  left: 0;
  transform: translate(24rpx, 0);
  border-bottom-color: #3296fa;
}
.dm-tooltips-title-text {
  display: -webkit-box;
  min-width: 80rpx;
  max-width: 480rpx;
  max-height: 72rpx;
  overflow: hidden;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 36rpx;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.dm-tooltips-title-close {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  color: rgba(255, 255, 255, 0.72);
}
