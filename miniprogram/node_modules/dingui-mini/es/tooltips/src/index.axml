<view class="dm-tooltips">

  <view class="{{$cssName}}-host">
    <slot name="content" />
  </view>

  <!-- style="display:{{$disappear?'none':'block'}}" -->
  <view a:if="{{!disappear}}" class="
      {{$cssName}}-title {{$cssName}}-title-placement__{{placement}} 
      {{$cssName}}-visible {{animate?$cssName+'-visible__animated':''}}  {{$cssName}}-visible-{{visible?'in':'out__'+placement}}
      {{className}}
    ">

    <view class="{{$cssName}}-title-text" style="{{textWidth?`width:${textWidth}rpx`:''}}">
      <slot name="title" />
    </view>

    <view class="{{$cssName}}-title-close" onTap="onDmCloseHook">
      <dingui-icon type="close-thin" size="small" />
    </view>

    <view class="dm-tooltips-title-arrow" style="{{arrowOffset?`transform: translateX(${arrowOffset}rpx);`:''}}" />

  </view>  <!-- end for title -->
  
</view>