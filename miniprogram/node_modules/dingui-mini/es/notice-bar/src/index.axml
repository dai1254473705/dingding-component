<view
  onTap="onDmTap"
  class="dm-notice-bar dm-notice-bar-{{type}} {{!!isCloseable ? 'dm-notice-bar-closeable' : ''}} {{className}}"
  a:if="{{showNotice}}"
>
  <view className="dm-notice-bar-icon">
    <slot>
      <block a:if="{{iconType && iconType !== ''}}">
        <dingui-icon type="{{iconType}}" className="dm-notice-bar-{{type}} dm-notice-bar-icon-{{type}}"/>
      </block>

      <block a:else>
        <block a:if="{{type === 'info'}}">
          <dingui-icon type="remark" className="dm-notice-bar-icon-{{type}}"/>
        </block>

        <block a:if="{{type === 'alert'}}">
          <dingui-icon type="notice" className="dm-notice-bar-{{type}}"/>
        </block>

        <block a:if="{{type === 'warn'}}">
          <dingui-icon type="warning" className="dm-notice-bar-{{type}}"/>
        </block>
      </block>
    </slot>
  </view>

  <view class="dm-notice-bar-content {{!!isCloseable ?'dm-notice-bar-closeable-content':''}}">
    <text class="dm-notice-bar-content-text dm-notice-bar-{{type}}">{{value}}</text>
  </view>

  <view a:if="{{!!isCloseable}}" onTap="onDmClose">
    <dingui-icon type="close" size="40" className="dm-notice-bar-close"/>
  </view>

  <!-- 点击时蒙层 -->
  <view class="dm-notice-bar-mask"></view>
</view>