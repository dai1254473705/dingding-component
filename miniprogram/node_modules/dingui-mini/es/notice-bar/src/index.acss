.dm-notice-bar {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 88rpx;
  max-height: 128rpx;
  font-size: 30rpx;
}
.dm-notice-bar-icon {
  padding-right: 16rpx;
  padding-left: 32rpx;
  font-size: 40rpx;
}
.dm-notice-bar-content {
  display: -webkit-box;
  box-sizing: border-box;
  width: 626rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  line-height: 40rpx;
  white-space: normal;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.dm-notice-bar-content-text {
  text-overflow: ellipsis;
  lines: 2;
}
.dm-notice-bar-info {
  color: rgba(25, 31, 37, 0.56);
  background-color: #ffffff;
}
.dm-notice-bar-icon-info {
  color: rgba(25, 31, 37, 0.4);
}
.dm-notice-bar-alert {
  color: #3296fa;
  background-color: #e6f2fe;
}
.dm-notice-bar-warn {
  color: #f25643;
  background-color: #fdeae8;
}
.dm-notice-bar-close {
  margin-right: 32rpx;
  margin-left: 16rpx;
  color: rgba(25, 31, 37, 0.4);
}
.dm-notice-bar-closeable-content {
  width: 574rpx;
  padding-right: 0;
}
.dm-notice-bar-mask {
  position: absolute;
  top: 0;
  left: 0;
  display: none;
  width: 100%;
  height: 100%;
  background-color: rgba(25, 31, 37, 0.12);
  pointer-events: none;
}
.dm-notice-bar:active .dm-notice-bar-mask {
  display: block;
}
