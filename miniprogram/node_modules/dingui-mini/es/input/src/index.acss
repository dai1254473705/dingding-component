.dm-input {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  background: #ffffff;
}
.dm-input-inputwrap {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}
.dm-input-icon {
  width: 72rpx;
  height: 42rpx;
  color: rgba(25, 31, 37, 0.4);
  line-height: 42rpx;
  text-align: center;
}
.dm-input-iconright {
  position: absolute;
  top: 56rpx;
  right: 20rpx;
  color: rgba(25, 31, 37, 0.4);
  line-height: 42rpx;
  text-align: center;
}
.dm-input-main {
  box-sizing: border-box;
  height: 144rpx;
  margin-right: 32rpx;
  margin-left: 32rpx;
  padding-top: 24rpx;
}
.dm-input-multiline .dm-input-main {
  height: auto;
  min-height: 240rpx;
}
.dm-input-title {
  position: relative;
  color: rgba(25, 31, 37, 0.56);
  font-size: 26rpx;
  line-height: 36rpx;
}
.dm-input-empty .dm-input-title {
  color: #191f25;
  font-size: 30rpx;
  line-height: 40rpx;
}
.dm-input-empty.dm-input-blur .dm-input-required {
  line-height: 44rpx;
}
.dm-input-required {
  position: absolute;
  top: 0;
  left: -20rpx;
  display: inline-block;
  color: #F25643;
  font-size: 16rpx;
  line-height: 36rpx;
}
.dm-input-input {
  box-sizing: border-box;
  width: 100%;
  height: 42rpx;
  padding: 0;
  line-height: 42rpx;
  vertical-align: middle;
  font-size: 34rpx;
  line-height: 44rpx;
  overflow: visible;
}
.dm-input-noplaceholder .dm-input-main {
  padding-top: 0;
}
.dm-input-noplaceholder .dm-input-title {
  font-size: 34rpx;
  line-height: 44rpx;
  line-height: 144rpx;
}
.dm-input-noplaceholder.dm-input-multiline .dm-input-title {
  line-height: 240rpx;
}
.dm-input-empty.dm-input-noplaceholder .dm-input-required {
  line-height: 144rpx;
}
.dm-input-empty.dm-input-noplaceholder.dm-input-multiline .dm-input-required {
  line-height: 240rpx;
}
.dm-input-focus .dm-input-title {
  color: #3296fa;
  font-size: 26rpx;
  line-height: 36rpx;
}
.dm-input-focus .dm-input-required {
  line-height: 36rpx;
}
.dm-input-textarea {
  height: auto;
  min-height: 144rpx;
  padding-bottom: 40rpx;
}
.dm-input-disabled .dm-input-title {
  color: rgba(25, 31, 37, 0.28);
}
.dm-input-disabled .dm-input-input {
  color: rgba(25, 31, 37, 0.28);
}
.dm-input-readonly-placeholder {
  color: rgba(25, 31, 37, 0.28);
}
.dm-input-error {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  height: 32rpx;
  padding-left: 32rpx;
  color: #f25643;
  line-height: 32rpx;
  background: #fdeae8;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 24rpx;
}
.dm-input-placeholder {
  margin-left: -6rpx;
}
