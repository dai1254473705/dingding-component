<view class="dm-radio-item {{className}}">
  <dingui-list-item
    disabled="{{disabled}}"
    hasborder="{{true}}" 
    onDmArrowClick="onDmExtraClick"
    onDmTap="onDmChange"
    arrowType="{{hasArrowIcon?arrowType:''}}"
    arrowSize="{{hasArrowIcon?arrowSize: ''}}"
    index="{{index}}"
  >
    <view a:if="{{hasArrowIcon}}" class="dm-radio-icon-wrap">
      <dingui-icon className="dm-radio-item-check-icon dm-radio-item-check-icon-{{isChecked ? 'show' : 'hide'}}" type="finish" size="44" ></dingui-icon>
      <view>{{itemName}}</view>
    </view>
    <view slot="extra" a:if="{{ !hasArrowIcon }}">
      <dingui-icon className="dm-radio-item-check-icon dm-radio-item-check-icon-{{isChecked ? 'show' : 'hide'}}" type="finish" size="44"></dingui-icon>
    </view>
    <view a:if="{{ !hasArrowIcon }}">{{itemName}}</view>
  </dingui-list-item>
</view> 