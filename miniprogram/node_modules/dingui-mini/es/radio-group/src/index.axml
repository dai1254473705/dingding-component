<view class="dm-radio-group {{className}}">
  <view a:if="{{$slots.header}}" class="dm-radio-group-header">
    <slot name="header" />
  </view>
  <view class="dm-radio-group-body">
    <block
      a:for="{{radioListsData}}"
      a:for-item="radio"
      a:for-index="radioIndex"
      a:key="{{'radioLists' + radioIndex}}"
    >
      <dingui-radio-item 
        index="{{radioIndex}}"
        itemName="{{radio.itemName}}"
        isChecked="{{radio.isChecked}}"
        arrowType="{{(radio.hasArrowIcon || hasArrowIcon) && (radio.arrowType || arrowType || '')}}"
        arrowSize="{{(radio.hasArrowIcon || hasArrowIcon) && (radio.arrowSize || arrowSize || '')}}"
        disabled="{{radio.disabled || disabled}}"
        hasArrowIcon="{{radio.hasArrowIcon || hasArrowIcon}}"
        data="{{radio.data}}"
        onDmChange="onDmChange"
        onDmExtraClick="onDmExtraClick"
      >
      </dingui-radio-item>
    </block>
  </view>
  <view a:if="{{$slots.footer}}" class="dm-radio-group-footer">
    <slot name="footer" />
  </view>
</view> 