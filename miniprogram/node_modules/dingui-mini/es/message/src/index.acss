.dm-message {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 48rpx;
  box-sizing: border-box;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: white;
  font-size: 28rpx;
  transform: translateY(-64rpx);
  opacity: 0;
}
.dm-message__success {
  background-color: #3296fa;
}
.dm-message__warning {
  background-color: #ff943e;
}
.dm-message__error {
  background-color: #f25643;
}
.dm-message-visible__animated {
  transition: opacity 0.3s 0.3s, transform 0.3s 0.3s ease;
}
.dm-message-visible-in {
  opacity: 1;
  transform: translateY(0);
}
.dm-message-visible-out {
  opacity: 0;
  transform: translateY(-64rpx);
}
