<view class="dm-watermark {{className}}">
  <view
    class="dm-watermark-bg"
    style="background-image: {{show ? `url(${watermarkPath})` : ''}}; background-size: {{(width/3)/slotWidth*100}}%">
    <slot/>
    <canvas
      id="canvas"
      width="{{width}}px"
      height="{{height}}px"
      style="width:{{width}}px;height: {{height}}px;display: none" />
    </view>
</view>