<view class="dm-search-bar {{className||''}}" onTap = "onDmTap">

    <view class="{{$cssName}}-wrap" >
        <view class="{{$cssName}}-icon" >
            <dingui-icon type="search" size="32"/>
        </view>
        <input class="{{$cssName}}-input {{className}} {{disabled?$cssName+'-input-disabled':''}}"  

            value       = "{{value}}"
            name        = "{{name}}"
            style       = "{{style}}"
            password    = "{{false}}"
            placeholder = "{{placeholder}}"
            disabled    = "{{disabled}}"
            maxlength   = "{{maxlength}}"
            focus       = "{{focus}}"
            type        = "search"

            onInput   = "onDmInputDebounceHook"
            onConfirm = "onDmConfirm"
            onFocus   = "onDmFocus"
            onBlur    = "onDmBlur"

        />
        <view class="{{$cssName}}-icon" onTap="onDmClearHook"  a:if="{{ !disabled && (value).length>0}}">
            <dingui-icon type="close-fill" size="32"/>
        </view>
    </view>
</view>
