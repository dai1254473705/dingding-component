.dm-tag {
  display: inline-block;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  max-width: 750rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-radius: 6rpx;
  flex-shrink: 0;
}
.dm-tag-blue {
  color: #3296fa;
  background-color: #e6f2fe;
}
.dm-tag-blue-hover,
.dm-tag-blue-hashover.dm-tag-large:active {
  color: #ffffff;
  background-color: #3296fa;
}
.dm-tag-darkblue {
  color: #ffffff;
  background-color: #3296fa;
}
.dm-tag-red {
  color: #f25643;
  background-color: #fdeae8;
}
.dm-tag-red-hover,
.dm-tag-red-hashover.dm-tag-large:active {
  color: #ffffff;
  background-color: #f25643;
}
.dm-tag-darkred {
  color: #ffffff;
  background-color: #f25643;
}
.dm-tag-green {
  color: #14bc83;
  background-color: #e3f7f0;
}
.dm-tag-green-hover,
.dm-tag-green-hashover.dm-tag-large:active {
  color: #ffffff;
  background-color: #14bc83;
}
.dm-tag-darkgreen {
  color: #ffffff;
  background-color: #14bc83;
}
.dm-tag-orange {
  color: #ff943e;
  background-color: #fff2e7;
}
.dm-tag-orange-hover,
.dm-tag-orange-hashover.dm-tag-large:active {
  color: #ffffff;
  background-color: #ff943e;
}
.dm-tag-darkorange {
  color: #ffffff;
  background-color: #ff943e;
}
.dm-tag-gray {
  color: rgba(25, 31, 37, 0.56);
  background-color: rgba(25, 31, 37, 0.08);
}
.dm-tag-darkgray {
  color: #ffffff;
  background-color: #576a95;
}
.dm-tag-close {
  padding-left: 8rpx;
  padding-right: 1rpx;
  color: rgba(25, 31, 37, 0.28);
}
.dm-tag-close:active {
  color: rgba(25, 31, 37, 0.28);
}
.dm-tag-small {
  font-size: 20rpx;
  font-weight: bold;
  line-height: 24rpx;
  padding-right: 4rpx;
  padding-left: 4rpx;
  vertical-align: middle;
  line-height: 32rpx;
}
.dm-tag-large {
  font-size: 28rpx;
  line-height: 38rpx;
  padding-right: 8rpx;
  padding-left: 8rpx;
  vertical-align: middle;
  line-height: 44rpx;
}
