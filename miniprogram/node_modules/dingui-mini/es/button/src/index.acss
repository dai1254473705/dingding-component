.dm-button {
  position: relative;
  display: inline-block;
  overflow: visible;
  border-radius: 6rpx;
}
.dm-button-button {
  display: inline-block;
  box-sizing: border-box;
  width: 100%;
  margin-top: 0;
  margin-right: 0;
  margin-bottom: 0;
  margin-left: 0;
  border-radius: 6rpx;
  border-color: rgba(25, 31, 37, 0.12);
}
.dm-button-loading-icon {
  font-size: 34rpx;
  line-height: 44rpx;
  display: inline-block;
  color: #ffffff;
  line-height: inherit;
  text-align: center;
  animation: loading 1s linear infinite;
}
@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.dm-button-button:active.dm-button-button::after {
  position: absolute;
  top: 1rpx;
  right: 1rpx;
  bottom: 1rpx;
  left: 1rpx;
  background-color: rgba(25, 31, 37, 0.12);
  content: " ";
}
.dm-button-disable .dm-button-button:active.dm-button-button::after {
  display: none;
}
.dm-button-loading .dm-button-button:active.dm-button-button::after {
  display: none;
}
.dm-button-button:hover {
  opacity: 1 !important;
  transition: none !important;
}
.dm-button-primary .dm-button-button {
  color: #ffffff;
  background-color: #3296fa;
}
.dm-button-primary.dm-button-disable .dm-button-button {
  color: rgba(255, 255, 255, 0.56);
  background-color: #add5fd;
}
.dm-button-default .dm-button-button {
  color: #191f25;
  background-color: #f6f6f6;
}
.dm-button-default.dm-button-disable .dm-button-button {
  color: rgba(25, 31, 37, 0.4);
  background-color: #f6f6f6;
}
.dm-button-default-light .dm-button-button {
  color: #191f25;
  background-color: #ffffff;
}
.dm-button-default-light.dm-button-disable .dm-button-button {
  color: rgba(25, 31, 37, 0.4);
  background-color: #ffffff;
}
.dm-button-default .dm-button-loading-icon,
.dm-button-default-light .dm-button-loading-icon {
  color: rgba(25, 31, 37, 0.56);
}
.dm-button-primary-ghost .dm-button-button {
  color: #3296fa;
  background-color: transparent;
  border: 2rpx solid #3296fa;
}
.dm-button-primary-ghost:active.dm-button-disable .dm-button-button,
.dm-button-primary-ghost.dm-button-disable .dm-button-button {
  color: #add5fd;
  background-color: transparent;
  border-color: #add5fd;
}
.dm-button-primary-ghost:active .dm-button-button {
  color: #ffffff;
  background-color: #3296fa;
}
.dm-button-primary-ghost:active.dm-button-loading .dm-button-button {
  color: #3296fa;
  background-color: transparent;
}
.dm-button-primary-ghost .dm-button-loading-icon {
  color: #3296fa;
}
.dm-button-danger .dm-button-button {
  color: #ffffff;
  background-color: #f25643;
}
.dm-button-danger.dm-button-disable .dm-button-button {
  color: rgba(255, 255, 255, 0.72);
  background-color: #fabbb4;
}
.dm-button-size-large {
  height: 96rpx;
}
.dm-button-size-large .dm-button-button {
  font-size: 36rpx;
  line-height: 46rpx;
  height: 96rpx;
  padding-right: 48rpx;
  padding-left: 48rpx;
  line-height: 94rpx;
  text-align: center;
}
.dm-button-size-large.dm-button-loading .dm-button-button {
  padding-right: 26rpx;
  padding-left: 26rpx;
}
.dm-button-size-large .dm-button-button .dm-button-loading-icon {
  width: 44rpx;
}
.dm-button-size-default {
  height: 72rpx;
}
.dm-button-size-default .dm-button-button {
  font-size: 32rpx;
  line-height: 42rpx;
  height: 72rpx;
  padding-right: 32rpx;
  padding-left: 32rpx;
  line-height: 70rpx;
}
.dm-button-size-default.dm-button-loading .dm-button-button {
  padding-right: 12rpx;
  padding-left: 12rpx;
}
.dm-button-size-default .dm-button-button .dm-button-loading-icon {
  width: 40rpx;
}
.dm-button-size-small {
  height: 56rpx;
}
.dm-button-size-small .dm-button-button {
  font-size: 28rpx;
  line-height: 38rpx;
  height: 56rpx;
  padding: 0 24rpx;
  line-height: 54rpx;
}
.dm-button-size-small.dm-button-loading .dm-button-button {
  color: transparent;
}
.dm-button-size-small .dm-button-button .dm-button-loading-icon {
  position: absolute;
  right: 0;
  left: 0;
  height: 56rpx;
  line-height: 54rpx;
}
