.dm-modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  background: rgba(25, 31, 37, 0.4);
}
.dm-modal-content {
  width: 590rpx;
  overflow: hidden;
  text-align: center;
  word-break: break-word;
  background: #ffffff;
  border-radius: 12rpx;
}
.dm-modal-title {
  font-size: 36rpx;
  line-height: 46rpx;
  margin-top: 36rpx;
  margin-right: 48rpx;
  margin-left: 48rpx;
  color: #191f25;
}
.dm-modal-img {
  display: flex;
  justify-content: center;
}
.dm-modal-img-large {
  width: 591rpx;
  height: 312rpx;
}
.dm-modal-img-small {
  width: 144rpx;
  height: 144rpx;
  margin-top: 48rpx;
}
.dm-modal-describe {
  font-size: 30rpx;
  line-height: 40rpx;
  margin-top: 24rpx;
  margin-right: 48rpx;
  margin-left: 48rpx;
  color: rgba(25, 31, 37, 0.56);
}
.dm-modal-describe-mtop {
  margin-top: 32rpx;
}
.dm-modal-input-wrap {
  position: relative;
  display: flex;
  margin-top: 24rpx;
  margin-right: 48rpx;
  margin-left: 48rpx;
}
.dm-modal-input {
  flex: 1;
  word-break: initial;
  height: 62rpx;
  padding: 5rpx 60rpx 5rpx 24rpx;
  text-align: left;
  border: 2rpx solid rgba(25, 31, 37, 0.12);
  border-radius: 6rpx;
}
.dm-modal-delete-icon {
  position: absolute;
  right: 24rpx;
  color: rgba(25, 31, 37, 0.4);
  line-height: 76rpx;
}
.dm-modal-button-list {
  margin-top: 40rpx;
}
.dm-modal-button-item {
  font-size: 36rpx;
  line-height: 46rpx;
  padding: 22rpx;
  color: #3296fa;
  text-align: center;
  border-top: 2rpx solid rgba(25, 31, 37, 0.08);
}
.dm-modal-button-item.active {
  color: #add5fd;
}
.dm-modal-button-item-bold {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 44rpx;
}
.dm-modal-button-list-row {
  display: flex;
}
.dm-modal-button-item-row {
  flex: 1;
  flex-direction: row;
}
.dm-modal-button-item-column {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.dm-modal-button-item-line:last-child {
  border-left: 2rpx solid rgba(25, 31, 37, 0.08);
}
