.dm-tabs {
  width: 750rpx;
  height: 96rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(25, 31, 37, 0.12);
}
.dm-tabs-flex {
  display: flex;
  height: 96rpx;
}
.dm-tabs-item {
  position: relative;
  flex: 1;
  height: 96rpx;
  overflow: hidden;
  text-align: center;
}
.dm-tabs-item-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  display: -webkit-box;
  box-sizing: border-box;
  width: 100%;
  max-height: 76rpx;
  padding: 0 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  transform: translate(-50%, -50%);
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.dm-tabs-item-active {
  color: #3296fa;
}
.dm-tabs-item-active-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #3296fa;
}
.dm-tabs-auto-width {
  display: inline-block;
  box-sizing: border-box;
  width: auto;
  max-width: 750rpx;
  padding: 0 32rpx;
  overflow-x: scroll;
}
.dm-tabs-auto-width .dm-tabs-flex {
  display: table-row;
}
.dm-tabs-auto-width .dm-tabs-item {
  display: table-cell;
}
.dm-tabs-auto-width .dm-tabs-item-inner {
  position: static;
  display: table-cell;
  max-width: 544rpx;
  height: 96rpx;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
  vertical-align: middle;
  transform: none;
}
