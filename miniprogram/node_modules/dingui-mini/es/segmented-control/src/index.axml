<view
    class="dm-segmented-control {{disabled?'dm-segmented-control-disabled':''}} {{className}}"
    style="display:{{widthType === 'auto'?'inline-block':'block'}}"
  >
  <view class="dm-segmented-control-flex-container {{widthType === 'auto'?'dm-segmented-control-inline':''}}">
    <view 
      a:for="{{texts}}"
      data-index="{{index}}"
      key="{{index}}"
      class="dm-segmented-control-item {{widthType === 'auto'?'dm-segmented-control-inline':''}} {{index === activeIndex?'dm-segmented-control-item-active':''}} {{index === (texts.length - 1)?'dm-segmented-control-item-last-child':''}} {{itemClassName}}"
      onTap="onDmItemTap">
      {{item}}
    </view>
  </view>
</view>