.dm-segmented-control {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  height: 56rpx;
}
.dm-segmented-control-flex-container {
  display: flex;
  flex: 1;
  flex-direction: row;
  border: 2rpx solid #3296fa;
  border-radius: 6rpx;
}
.dm-segmented-control-disabled {
  opacity: 0.4;
}
.dm-segmented-control-item {
  font-size: 28rpx;
  line-height: 38rpx;
  display: inline-block;
  flex: 1;
  box-sizing: border-box;
  height: 52rpx;
  padding-top: 7rpx;
  padding-right: 24rpx;
  padding-bottom: 7rpx;
  padding-left: 24rpx;
  color: #3296fa;
  white-space: nowrap;
  text-align: center;
  border-right: 2rpx solid #3296fa;
}
.dm-segmented-control-item-last-child {
  border-right: none;
}
.dm-segmented-control-item-active {
  color: #ffffff;
  background-color: #3296fa;
}
.dm-segmented-control-item:active {
  background-color: #e6f2fe;
}
.dm-segmented-control-item-active:active {
  background-color: #3296fa;
}
.dm-segmented-control-inline {
  flex: initial;
  justify-content: flex-start;
}
