.dm-screen {
  display: flex;
  align-items: center;
  padding-top: 24rpx;
  padding-bottom: 8rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  border-bottom: 1rpx solid rgba(25, 31, 37, 0.12);
  width: 750rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.dm-screen::-webkit-scrollbar {
  -webkit-appearance: none;
  width: 0;
}
.dm-screen-noscroll {
  flex-wrap: wrap;
  padding-right: 0rpx;
}
.dm-screen-wrapper {
  display: flex;
  flex-shrink: 0;
  align-items: center;
  margin-right: 16rpx;
}
.dm-screen-item {
  flex-shrink: 0;
  height: 64rpx;
  padding: 0 28rpx;
  text-align: center;
  background-color: #f6f6f6;
  border-radius: 32rpx;
  font-size: 28rpx;
  line-height: 38rpx;
  line-height: 64rpx;
  color: rgba(25, 31, 37, 0.72);
  letter-spacing: -0.18rpx;
  margin-bottom: 16rpx;
}
.dm-screen-item-active {
  background-color: #e6f2fe;
  color: #3296fa;
}
