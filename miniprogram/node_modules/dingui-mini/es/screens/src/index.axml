<block a:if="{{style=='scroll'}}">
  <scroll-view scroll-x class="dm-screen {{className}} dm-screen-scroll" >
      <view a:for="{{options}}" a:key="screen{{dmId}}{{index}}" class="dm-screen-wrapper">
        <view data-option="{{item}}" data-index="{{index}}" class="dm-screen-item {{(selectList.indexOf( item.id ) !== -1 ||selectList.indexOf( 'screen'+dmId+index ) !== -1)? 'dm-screen-item-active' : ''}}" onTap="changeState">{{item.name}}</view>
      </view>
  </scroll-view>
</block>
<block a:else>
  <view class="dm-screen {{className}} dm-screen-noscroll" >
    <view a:for="{{options}}" a:key="screen{{dmId}}{{index}}" class="dm-screen-wrapper">
      <view data-option="{{item}}" data-index="{{index}}" class="dm-screen-item {{(selectList.indexOf( item.id ) !== -1 ||selectList.indexOf( 'screen'+dmId+index ) !== -1)? 'dm-screen-item-active' : ''}}" onTap="changeState">{{item.name}}</view>
    </view>
  </view>
</block>