<view class="dm-swipe {{swiping ? 'dm-swiping' : ''}} {{className}}">
  <block a:if="{{right.length > 0}}">
    <view class="dm-swipe-right">
      <block a:for="{{right}}">
        <view
          class="dm-swipe-btn dm-swipe-btn-{{item.type}}"
          onTap="onDmItemClick"
          data-index="{{index}}"
          key="swipe-item-{{index}}"
        >
          {{item.text}}
        </view>
      </block>
    </view>
  </block>
  <view
    class="dm-swipe-content"
    onTap="onDmSwipeTap"
    onTouchStart="onDmSwipeStart"
    onTouchEnd="onDmSwipeEnd"
    onTouchMove="onDmSwipeMove"
    data-type="content"
    style="transform: translateX({{leftPos}}rpx);"   
  >
    <slot />
  </view>
</view>