.dm-swipe {
  position: relative;
  overflow: hidden;
}
.dm-swipe-content {
  position: relative;
  transition: all 250ms;
}
.dm-swiping .dm-swipe-content {
  transition: none;
}
.dm-swipe-right {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
  right: 0;
}
.dm-swipe-btn {
  justify-content: center;
  align-items: center;
  display: flex;
  padding: 0 20rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #ffffff;
}
.dm-swipe-btn-delete {
  background-color: #f25643;
}
.dm-swipe-btn-edit {
  background-color: #3296fa;
}
.dm-swipe-btn-more {
  background-color: rgba(25, 31, 37, 0.4);
}
.dm-swipe .dm-list-item-hover:active {
  background: #ffffff;
}
