<view class="dm-crumbs {{className}}">
  <block a:for="{{breadcrumbs}}">

    <block a:if="{{index !== breadcrumbs.length - 1}}">
      <view
        class="dm-crumbs-item {{ index === 0 ? 'dm-crumbs-item-first-child': '' }}"
        data-index="{{index}}"
        onTap="onDmTap">
        {{item}}
      </view>
      <!-- ç®­å¤´ -->
      <dingui-icon type="arrow-right" className="dm-crumbs-arrow" size="24"/>
    </block>

    <block a:if="{{index === breadcrumbs.length - 1}}">
      <view
        class="dm-crumbs-item dm-crumbs-item-last-child dm-crumbs-silent"
        data-index="{{index}}" >
        {{item}}
      </view>
    </block>

  </block>
</view>