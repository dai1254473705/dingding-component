.dm-switch-common-radio {
  box-sizing: border-box;
  width: 56rpx;
  height: 56rpx;
  background-color: #ffffff;
  border-color: rgba(25, 31, 37, 0.12);
  border-style: solid;
  border-width: 1rpx;
  border-radius: 56rpx;
  box-shadow: 0 6px 2px 0 rgba(25, 31, 37, 0.08), 0 4rpx 4rpx 0 rgba(25, 31, 37, 0.08), 0 6rpx 6rpx 0 rgba(25, 31, 37, 0.08);
}
.dm-switch-common-bg {
  box-sizing: border-box;
  width: 102rpx;
  height: 62rpx;
  border-radius: 62rpx;
}
.dm-switch {
  position: relative;
  display: inline-block;
  width: 102rpx;
  height: 62rpx;
}
.dm-switch-disabled {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #ffffff;
  opacity: 0.4;
  box-sizing: border-box;
  width: 102rpx;
  height: 62rpx;
  border-radius: 62rpx;
}
.dm-switch-bg-uncheck {
  box-sizing: border-box;
  width: 102rpx;
  height: 62rpx;
  border-radius: 62rpx;
  background-color: #ffffff;
  border-color: rgba(25, 31, 37, 0.08);
  border-style: solid;
  border-width: 3rpx;
}
.dm-switch-bg-check {
  box-sizing: border-box;
  width: 102rpx;
  height: 62rpx;
  border-radius: 62rpx;
  background-color: #3296fa;
}
.dm-switch-radio-uncheck {
  position: absolute;
  top: 1.5rpx;
  left: 3rpx;
  box-sizing: border-box;
  width: 56rpx;
  height: 56rpx;
  background-color: #ffffff;
  border-color: rgba(25, 31, 37, 0.12);
  border-style: solid;
  border-width: 1rpx;
  border-radius: 56rpx;
  box-shadow: 0 6px 2px 0 rgba(25, 31, 37, 0.08), 0 4rpx 4rpx 0 rgba(25, 31, 37, 0.08), 0 6rpx 6rpx 0 rgba(25, 31, 37, 0.08);
}
.dm-switch-radio-check {
  position: absolute;
  top: 3rpx;
  right: 3rpx;
  box-sizing: border-box;
  width: 56rpx;
  height: 56rpx;
  background-color: #ffffff;
  border-color: rgba(25, 31, 37, 0.12);
  border-style: solid;
  border-width: 1rpx;
  border-radius: 56rpx;
  box-shadow: 0 6px 2px 0 rgba(25, 31, 37, 0.08), 0 4rpx 4rpx 0 rgba(25, 31, 37, 0.08), 0 6rpx 6rpx 0 rgba(25, 31, 37, 0.08);
}
