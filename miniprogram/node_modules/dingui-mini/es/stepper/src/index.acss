.dm-stepper {
  display: inline-block;
}
.dm-stepper-input {
  display: inline-block;
  width: 76rpx;
  color: #191f25;
  text-align: center;
  font-size: 42rpx;
  padding: 0;
  height: 48rpx;
  line-height: 48rpx;
  background: transparent;
  vertical-align: top;
  box-sizing: border-box;
}
.dm-stepper-ismin .dm-stepper-reduce {
  opacity: 0;
  pointer-events: none;
}
.dm-stepper-ismin .dm-stepper-input {
  opacity: 0;
  pointer-events: none;
}
.dm-stepper-add,
.dm-stepper-reduce {
  color: #3296fa;
  font-size: 42rpx;
  line-height: 48rpx;
}
.dm-stepper-add-ismax,
.dm-stepper-reduce-ismin {
  opacity: 0.4;
  pointer-events: none;
}
