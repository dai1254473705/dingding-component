<view 
  class="dm-stepper {{className}} {{opaReduceWrap}}"
  style="opacity:{{disabled ? '0.4' : '1'}}"
>
  <dingui-icon class="dm-stepper-reduce {{ value == min ? 'dm-stepper-reduce-ismin' : '' }}" type="jian" dataType="reduce" onDmTap="changeFn" />
  <input
    a:if="{{canEdit}}"
    class="dm-stepper-input"
    value="{{value}}"
    onBlur="resetFn"
    onInput="inputFn"
    type="number"
  />
  <view
    a:else
    class="dm-stepper-input"
  >{{value}}</view>
  <dingui-icon class="dm-stepper-add {{ value == max ? 'dm-stepper-add-ismax' : ''}}" type="jia" dataType="add" onDmTap="changeFn" />
</view>