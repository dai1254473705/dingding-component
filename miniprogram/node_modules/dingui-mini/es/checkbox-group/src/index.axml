<view class="dm-checkbox-group {{className}}">
  <view a:if="{{$slots.header}}" class="dm-checkbox-group-header">
    <slot name="header" />
  </view>
  <view class="dm-checkbox-group-body">
    <block 
      a:for="{{checkboxListsData}}"
      a:for-item="checkbox"
      a:for-index="checkboxIndex"
      a:key="{{'checkboxLists' + checkboxIndex}}"
    >
      <dingui-checkbox-item 
        index="{{checkboxIndex}}"
        itemName="{{checkbox.itemName}}"
        isChecked="{{checkbox.isChecked}}"
        disabled="{{checkbox.disabled || disabled}}"
        onDmChange="onDmChange"
        data="{{checkbox.data}}"
      >
      </dingui-checkbox-item>
    </block>
  </view>
  <view a:if="{{$slots.footer}}" class="dm-checkbox-group-footer">
    <slot name="footer" />
  </view>
</view>